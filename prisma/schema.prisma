// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model PostType {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  published Boolean  @default(false)
  title     String
  color     String?
  icon      String?
  subtitle  String?
  intro     String?
  content   String?
  posts     Post[]
  createdAt DateTime @default(now())
}


model Post {
  id        Int      @id @default(autoincrement())
  type      PostType @relation(fields: [typeId], references: [id])
  typeId    Int
  slug      String   @unique
  published Boolean  @default(false)
  frontpage Boolean  @default(false)
  title     String
  subtitle  String?
  intro     String?
  content   String?
  imageUrl  String?
  imageAlt  String?
  linkUrl   String?
  linkLabel String?
  createdAt DateTime @default(now())

  @@index([typeId])
}

model MenuItem {
  id       Int     @id @default(autoincrement())
  order    Int
  link     String
  title    String
  color    String?
  icon     String?
  subtitle String?
}

model globalSetting {
  id    Int     @id @default(autoincrement())
  key   String  @unique
  value String?
}
